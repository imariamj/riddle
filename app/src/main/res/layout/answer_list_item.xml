<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questionAnsText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/question_mark"
        android:text="Question answer"
        style="@style/QuestionAnswer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CorrectAnswer_TVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:text="Correct Answer"
            android:textColor="@color/colorPrimaryDark"
            style="@style/QuestionAnswer" />

        <TextView
            android:id="@+id/selectedAnswer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Selected Answer"
            android:textColor="@color/colorAccent"
            style="@style/QuestionAnswer"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
