<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.mj.riddled.ScoreActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg4"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/score_count_id"
        style="@style/StartPuzzle"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/correct_answers_lvID"
        android:layout_below="@id/score_count_id"
        android:layout_above="@+id/another_game_btnid"
        android:paddingBottom="@dimen/answer_lv_padding_bottom"
        android:paddingTop="@dimen/answer_lv_padding_top">

    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/another_game_btnid"
        android:text="Start another quiz"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/start_another_button_layoutMarginBottom"
        android:paddingLeft="@dimen/start_another_button_paddingLeft"
        android:paddingRight="@dimen/start_another_button_paddingRight"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
